<button type="button" class="back-top">置頂</button>

<style>
	.back-top {
		position: fixed;
		bottom: 30px;
		right: 30px;
		width: 50px;
		height: 50px;
		background-color: var(--primary-color);
		color: #fff;
		border: none;
		border-radius: 50%;
		font-size: 1rem;
		font-weight: bold;
		cursor: pointer;
		opacity: 0;
		transform: translateY(20px);
		transition:
			opacity 0.3s ease,
			transform 0.3s ease,
			background-color 0.3s ease,
			box-shadow 0.3s ease,
			scale 0.3s ease;
		z-index: 1000;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.back-top.show {
		opacity: 1;
		transform: translateY(0);
	}

	.back-top:hover {
		background-color: #2980b9;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
		transform: scale(1.1);
	}

	.back-top:disabled {
		background-color: #ccc;
		cursor: not-allowed;
	}
</style>
