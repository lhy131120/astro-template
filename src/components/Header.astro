---
const navs = [
	{ name: "首頁", href: "/" },
	{ name: "部落格", href: "/blog" },
];
---

<header class="header">
	<div class="container">
		<nav class="nav">
			<ul>
				<!-- <li class="nav-item"><a class="nav-link" href="/">首頁</a></li> -->
				<!-- <li class="nav-item"><a class="nav-link" href="./blog.html">部落格</a></li> -->
				{
					navs.map((nav) => {
						return (
							<li class="nav-item">
								<a class="nav-link" href={nav.href}>
									{nav.name}
								</a>
							</li>
						);
					})
				}
			</ul>
		</nav>
	</div>
</header>

<style>
	.header {
		background-color: #fbfbfb;
		padding: 1.5rem 0;
		width: 100%;
		z-index: 100;
		transition: all 0.25s ease;
	}

	.header.sticky {
		position: sticky;
		top: 0;
		box-shadow: 0px 15px 15px 5px rgba(0, 0, 0, 0.1);
	}

	.nav ul {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 2.5rem;
	}

	.nav .nav-link {
		display: block;
		font-size: 1.75rem;
		font-weight: 700;
		color: var(--dark-color);
	}
</style>
